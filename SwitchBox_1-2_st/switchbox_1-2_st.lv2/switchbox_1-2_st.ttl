@prefix lv2:  <http://lv2plug.in/ns/lv2core#>.
@prefix doap: <http://usefulinc.com/ns/doap#>.
@prefix epp: <http://lv2plug.in/ns/ext/port-props#>.
@prefix foaf: <http://xmlns.com/foaf/0.1/>.
@prefix mod: <http://moddevices.com/ns/modgui#>.
@prefix rdf:  <http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>.

<http://moddevices.com/plugins/mod-devel/switchbox_1-2_st>
a lv2:Plugin, lv2:UtilityPlugin;

doap:name "Stereoswitchbox2";

doap:developer [
    foaf:name "Jarno Verheesen";
    foaf:homepage <>;
    foaf:mbox <mailto:j.verheesen@hotmail.nl>;
    ];

doap:maintainer [
    foaf:name "MOD";
    foaf:homepage <http://moddevices.com>;
    foaf:mbox <mailto:devel@moddevices.com>;
    ];

    lv2:minorVersion 1;
    lv2:microVersion 1;

doap:license <GPL>;

rdfs:comment """
This switch box receives two stereo audio input signals and channel it through it's stereo outputs.

""";

lv2:port
[
    a lv2:AudioPort, lv2:InputPort;
    lv2:index 0;
    lv2:symbol "InL";
    lv2:name "In L";
],
[
    a lv2:AudioPort, lv2:InputPort;
    lv2:index 1;
    lv2:symbol "InR";
    lv2:name "In R";
],
[
    a lv2:AudioPort, lv2:OutputPort;
    lv2:index 2;
    lv2:symbol "OUT1L";
    lv2:name "OUT 1L";
],
[
    a lv2:AudioPort, lv2:OutputPort;
    lv2:index 3;
    lv2:symbol "OUT1R";
    lv2:name "OUT 1R";
],
[
    a lv2:AudioPort, lv2:OutputPort;
    lv2:index 4;
    lv2:symbol "Out2L";
    lv2:name "Out 2L";
],
[
    a lv2:AudioPort, lv2:OutputPort;
    lv2:index 5;
    lv2:symbol "Out2R";
    lv2:name "Out 2R";
],
[
    a lv2:ControlPort, lv2:InputPort;
    lv2:index 6;
    lv2:symbol "Switch";
    lv2:name "Channel";
    lv2:portProperty lv2:integer;
    lv2:portProperty lv2:enumeration ;
        lv2:scalePoint [rdfs:label "1"; rdf:value 0];
        lv2:scalePoint [rdfs:label "2"; rdf:value 1];    
    lv2:default 0;
    lv2:minimum 0;
    lv2:maximum 1;
];
.
