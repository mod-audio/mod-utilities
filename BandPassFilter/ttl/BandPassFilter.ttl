@prefix lv2:  <http://lv2plug.in/ns/lv2core#>.
@prefix doap: <http://usefulinc.com/ns/doap#>.
@prefix epp: <http://lv2plug.in/ns/ext/port-props/#>.
@prefix pprops: <http://lv2plug.in/ns/ext/port-props#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/>.
@prefix units: <http://lv2plug.in/ns/extension/units#> .
@prefix rdf:  <http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>.

<http://portalmod.com/plugins/mod-devel/BandPassFilter>
a lv2:Plugin, lv2:SpectralPlugin;

doap:name "BandPassFilter";

doap:developer [
    foaf:name "Andre";
    foaf:homepage <>;
    foaf:mbox <mailto:andre_coutinho@rocketmail.com>;
    ];

doap:maintainer [
    foaf:name "MOD Team";
    foaf:homepage <http://portalmod.com>;
    foaf:mbox <mailto:devel@portalmod.com>;
    ];

doap:license <GPL>;
lv2:port 
[
    a lv2:AudioPort, lv2:InputPort;
    lv2:index 0;
    lv2:symbol "In";
    lv2:name "In";
],
[
    a lv2:AudioPort, lv2:OutputPort;
    lv2:index 1;
    lv2:symbol "Out1";
    lv2:name "Out 1";
],
[
    a lv2:ControlPort, lv2:InputPort;
    lv2:index 2;
    lv2:symbol "Freq";
    lv2:name "Freq";
    lv2:portProperty epp:logarithmic;
    lv2:portProperty pprops:logarithmic ;
    units:unit units:hz ;
    lv2:default 600;
    lv2:minimum 200;
    lv2:maximum 2000;
],
[
    a lv2:ControlPort, lv2:InputPort;
    lv2:index 3;
    lv2:symbol "Q";
    lv2:name "Q";
    lv2:default 0.707;
    lv2:minimum 0.707;
    lv2:maximum 5;
],
[
    a lv2:ControlPort, lv2:InputPort;
    lv2:index 4;
    lv2:symbol "Order";
    lv2:name "Order";
    lv2:portProperty lv2:integer;
        lv2:portProperty lv2:enumeration ;
        lv2:scalePoint [rdfs:label "1"; rdf:value 0];
        lv2:scalePoint [rdfs:label "2"; rdf:value 1];
        lv2:scalePoint [rdfs:label "3"; rdf:value 2];
    lv2:default 0;
    lv2:minimum 0;
    lv2:maximum 2;
].
